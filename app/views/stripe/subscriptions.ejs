<%- include('../head'); -%>

<div class="subscriptions-block">
	<h2>Mes abonnements</h2>
	<ul>
	<% for (subscription of subscriptions.data) { %>
		<li class="subscription-item" id="subscription-item_<%= subscription.id %>"><p><%= subscription.items.data[0].metadata.station_name %></p><button>RÃ©silier</button></li>
	<% } %>
	</ul>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
$(document).ready(function() {	
	alert('ok');
	$('.subscription-item > button').on('click', function() {
		let subscription_id = $(this).parent().attr('id').replace('subscription-item_', '');
		alert(subscription_id);

		$.ajax({
		   url : '/subscription/'+subscription_id,
		   type : 'DELETE',
		   data: {subscription_id: subscription_id},
		   dataType : 'json',
		   success : function(resultat, statut){
		   		console.dir(resultat);
		   },
		   error : function(resultat, statut, erreur){
		     alert('ECHEC');
		     console.dir(erreur);
		   }
		})
	});
})
</script>